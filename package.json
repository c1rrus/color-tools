{
  "name": "colorglue",
  "version": "2.0.2",
  "description": "A library for feeding a set of colours into various tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "clean": "del dist/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest --coverage"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c1rrus/colorglue.git"
  },
  "keywords": [
    "color",
    "colors",
    "a11y",
    "contrast",
    "palette",
    "design",
    "tokens"
  ],
  "author": "James Nash (http://cirrus.twiddles.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/c1rrus/colorglue/issues"
  },
  "homepage": "https://github.com/c1rrus/colorglue#readme",
  "dependencies": {
    "@types/color": "^3.0.3",
    "@types/node": "^14.18.24",
    "color": "^4.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@cyberfinity/tsconfig-node": "^1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^28.1.2",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "^28.0.5",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">= 14"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
